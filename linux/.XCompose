# ~/.XCompose
# This file defines custom Compose sequences for Unicode characters

# Import default rules from the system Compose file:
include "/usr/share/X11/locale/en_US.UTF-8/Compose"

# To put some stuff onto compose key strokes:
<Multi_key> <C>     : "Ç" Ccedilla
<Multi_key> <c>     : "ç" ccedilla

<Multi_key> <n> <A> : "Ã" Atilde
<Multi_key> <n> <a> : "ã" atilde
<Multi_key> <n> <O> : "Õ" Otilde
<Multi_key> <n> <o> : "õ" otilde

<Multi_key> <i> <a> : "â" acircumflex
<Multi_key> <i> <A> : "Â" Acircumflex
<Multi_key> <i> <e> : "ê" ecircumflex
<Multi_key> <i> <E> : "Ê" Ecircumflex
<Multi_key> <i> <O> : "Ô" Ocircumflex
<Multi_key> <i> <o> : "ô" ocircumflex

<Multi_key> <e> <A> : "Á" Aacute
<Multi_key> <e> <a> : "á" aacute
<Multi_key> <e> <E> : "É" Eacute
<Multi_key> <e> <e> : "é" eacute
<Multi_key> <e> <I> : "Í" Iacute
<Multi_key> <e> <i> : "í" iacute
<Multi_key> <e> <O> : "Ó" Oacute
<Multi_key> <e> <o> : "ó" oacute
<Multi_key> <e> <U> : "Ú" Uacute
<Multi_key> <e> <u> : "ú" uacute
